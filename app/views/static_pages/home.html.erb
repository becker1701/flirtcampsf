<% if logged_in? %>

	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for current_user %>	
					<%= display_name(current_user) %>
				</h1>
			</section>
			
			<% if @next_event.present? %>
				<section>
					<div id="camp_info">
					<strong>Camp Info</strong>
					
						<span id="camp_address">Address: <%= @next_event.camp_address %></span>
						<span id="camp_ea_date">Early Arrival Date: <%= @next_event.early_arrival_date %></span>
					
					</div>
				</section>
			<% end %>

		</aside>
		<div class="col-md-8">


			<% if @next_event.present? %>
				<div class="event_user_header">
						<h1 class="text-left"><%= @next_event.year %></h1>
						<h4><small><%= @next_event.start_date %> to <%= @next_event.end_date %></small></h4>
						<h4><small><%= @next_event.theme %></small></h4>
				</div>

				<div class="user_intention">
					<% if @intention.new_record? %>
						<ul>
							<li><%= link_to "I have a ticket and am going!", intentions_path(status: :going_has_ticket, event: @next_event), method: :post %></li>
							<li><%= link_to "I want to go, but do not have a ticket :(", intentions_path(status: :going_needs_ticket, event: @next_event), method: :post %></li>
							<li><%= link_to "I am NOT going, but do have ticket(s) for sale :)", intentions_path(status: :not_going_has_ticket, event: @next_event), method: :post %></li>
							<li><%= link_to "None of the above, this year..." , intentions_path(status: :not_going_no_ticket, event: @next_event), method: :post %></li>
						</ul>
					<% else %>

						<%= render "intentions/#{@intention.status}" %>

						
					<% end %>
				</div>
			<% else %>

				<h3>No event scheduled</h3>
			<% end %>
		</div>
	</div>


<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Flirt Camp App!</h1>
		<h2>
			This is the home page for Flirt Camp.
		</h2>

		<hr>
		<h4>Like to join Flirt Camp?</h4>
			<p>Flirt Camp is a fun year-round community of folks, mainly from the SF Bay Area, who are committed to having extrodinary relationships and love Burning Man.</p>
			<%= link_to "Join Flirt Camp", new_member_app_path, class: "btn btn-primary btn-lg" %>
		<hr>
		<h4>Existing Member?</h4>
			<p>Need access to the site?  Submit an application with your name, playa name and email, and I will send you a link.</p>
			<%= link_to "Request Access", new_existing_member_request_path, class: "btn btn-primary btn-lg" %>

	</div>

<% end %>

<%#= image_tag("flirt_camp.png", alt: "Flirt Camp logo", size: "60x80") %>