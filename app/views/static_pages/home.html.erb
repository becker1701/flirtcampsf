<% if logged_in? %>

	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for current_user %>	
					<%= current_user.playa_name %>
				</h1>
			</section>
		</aside>
	</div>


<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Flirt Camp App!</h1>
		<h2>
			This is the home page for Flirt Camp.
		</h2>

		<%= link_to "New Members", new_member_app_path, class: "btn btn-primary btn-lg" %>
		<%= link_to "Existing Members", login_path, class: "btn btn-primary btn-lg" %>

	</div>

<% end %>

<%= image_tag("flirt_camp.png", alt: "Flirt Camp logo", size: "60x80") %>