<% if logged_in? %>

	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for current_user %>	
					<%= display_name(current_user) %>
				</h1>
			</section>
			
			<% if @next_event.present? %>
				<section>
					<div id="camp_info">
					<strong>Camp Info</strong>
					
						<span id="camp_address">Address: <%= @next_event.camp_address %></span>
						<span id="camp_ea_date">EA Date: <%= @next_event.early_arrival_date.strftime("%B %e") %></span>
					
					</div>
				</section>
			<% end %>

			<p>Camp Organizer:</p>
			<p>EA Team:</p>
			<p>Previous Years:</p>

		</aside>
		<div class="col-md-8">


			<% if @next_event.present? %>
				<div class="event_user_header">
						<h1 class="text-left"><%= @next_event.year %></h1>
						<h1><small><%= @next_event.theme %></small></h1>
						<h4><small><%= @next_event.start_date.strftime("%B %e") %> to <%= @next_event.end_date.strftime("%B %e") %></small></h4>
						
				</div>

				<div class="user_intention">
					<% if @intention.new_record? %>
						<%= render 'intentions/change_status' %>
					<% else %>

						

						<%= render "intentions/#{@intention.status}", user: current_user %>
						<%= link_to "Edit", edit_intention_path(@intention), class: "btn btn-primary" %>

						
					<% end %>
				</div>
			<% else %>

				<h3>No event scheduled</h3>
			<% end %>
		</div>
	</div>


<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Flirt Camp App!</h1>
		<h2>
			This is the home page for Flirt Camp.
		</h2>

		<hr>
			<p>Flirt Camp is a fun year-round community of folks, mainly from the SF Bay Area, who are committed to having extrodinary relationships and love Burning Man.</p>
			<%= link_to "Join Flirt Camp", new_member_app_path, class: "btn btn-primary btn-lg" %>
		<hr>
		
			<p>Need access to the site?  Submit an application with your name, playa name and email, and I will send you a link.</p>
			<%= link_to "I am an existing member", new_existing_member_request_path, class: "btn btn-primary btn-lg" %>

	</div>

<% end %>

