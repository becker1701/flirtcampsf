<% if logged_in? %>

	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for current_user %>	
					<%= current_user.playa_name %>
				</h1>
			</section>
		</aside>
		<div class="col-md-8">

			<% if @next_event.present? %>
				<h1>)'( <%= @next_event.year %> Event!!</h1>
				<h1><small><%= @next_event.start_date %> to <%= @next_event.end_date %></small></h1>
				<h1><small><%= @next_event.theme %></small></h1>
				<h3>Camp Info:</h3>
				<p><%= @next_event.year %> Location: <%= @next_year.blank? ? "None yet." : @next_year.location %></p>
				<p><%= @next_event.year %> EA Date: <%= @next_year.blank? ? "Not set yet." : @next_year.early_arrival_date %></p>

				<ul>
					<li><%= link_to "I have a ticket and am going!", '#' %></li>
					<li><%= link_to "I want to go, but do not have a ticket :(", '#' %></li>
					<li><%= link_to "I am NOT going, but do have ticket(s) for sale :)", '#' %></li>
					<li><%= link_to "None of the above, this year..." , '#' %></li>
				</ul>
			<% end %>
		</div>
	</div>


<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Flirt Camp App!</h1>
		<h2>
			This is the home page for Flirt Camp.
		</h2>

		<hr>
		<h4>Like to join Flirt Camp?</h4>
			<p>Flirt Camp is a fun year-round community of folks, mainly from the SF Bay Area, who are committed to having extrodinary relationships and love Burning Man.</p>
			<%= link_to "Join Flirt Camp", new_member_app_path, class: "btn btn-primary btn-lg" %>
		<hr>
		<h4>Existing Member?</h4>
			<p>Need access to the site?  Submit an application with your name, playa name and email, and I will send you a link.</p>
			<%= link_to "Request Access", new_existing_member_request_path, class: "btn btn-primary btn-lg" %>

	</div>

<% end %>

<%#= image_tag("flirt_camp.png", alt: "Flirt Camp logo", size: "60x80") %>