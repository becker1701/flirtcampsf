<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Camp Roster (<%= User.attending_next_event.count %>)</strong></h3>
  </div>
  <div class="panel-body">
    <%= link_to "View roster in member directory", users_path(q: :attending_next_event) %>

    <ul>
      <% User.attending_next_event.each do |camper| %>
        <li><strong><%= link_to (camper.playa_name.present? ? camper.playa_name : "<No Playa Name yet...>"), user_path(camper) %></strong> (<%= camper.name %>)</li>
      <% end %>
    </ul>
  </div>
</div>