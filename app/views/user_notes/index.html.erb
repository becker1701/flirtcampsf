<% provide(:title, "Notes for #{display_name(@user)}") %>

<h1>Notes for <%= display_name(@user) %></h1>

<ul class="list-inline">
	<%= content_tag(:li, link_to("New Note", new_user_user_note_path(@user), class: "btn btn-primary")) %>
	<%= content_tag(:li, link_to("Profile", user_path(@user), class: "btn btn-default")) %>
</ul>

<% if @user_notes.any? %>
	<table class="table">
		<%= render @user_notes %>
	</table>
<% else %>

<% end %>

