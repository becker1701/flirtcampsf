<% provide(:title, "New Note for #{display_name(@user)}") %>

<h1>New Note for <%= display_name(@user) %></h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		
		<%= form_for [@user, @user_note] do |f| %>
			
			<%= render 'form', f: f %>
			
			<%= f.submit "Save note", class: "btn btn-primary" %>
			<%= link_to "Cancel", user_user_notes_path(@user) %>
		<% end %>


	</div>
</div>