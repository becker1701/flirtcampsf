<%= render 'shared/error_messages', object: @user %>

<%= hidden_field_tag :invite, @invite.id if @invite %>
<%= f.hidden_field :membership_application_id %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :playa_name %>
  <%= f.text_field :playa_name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :hometown, "Current Home Town" %>
  <p class="help-block">City, State</p>
  <%= f.text_field :hometown, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :email %>

  <% if @invite.present? %>
    <p class="form-static-control"><%= @invite.email %></p>
  <%= f.hidden_field :email, value: @invite.email %>
  <% else %>
    <%= f.text_field :email, class: "form-control" %>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :phone %>
  <%= f.phone_field :phone, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
</div>