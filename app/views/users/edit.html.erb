<% provide(:title, "Edit Profile") %>

<h1>Edit Profile</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">

		

		<%= form_for @user do |f| %>

			<%= render 'form', f: f %>

			<%= f.submit 'Update Profile', class: "btn btn-primary" %>

		<% end %>



		<div class="gravatar_edit">
			<%= gravatar_for @user %>
			<%= link_to "change", "http://gravatar.com/emails", target: "_blank" %>
		</div>
	</div>
</div>