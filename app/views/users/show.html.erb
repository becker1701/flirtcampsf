<% provide(:title, @user.playa_name) %>

<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>	
				<%= @user.playa_name %>
			</h1>
		</section>
	</aside>
	<div class="col-md-8">

		<% if @next_event.present? %>
			<% if @user.next_event_intention.new_record? %>
				<h3>Not responded yet...</h3>
			<% else %>
				<%= render "intentions/#{@user.next_event_intention.status}", user: @user %>
			<% end %>
		<% end %>
	</div>
</div>



