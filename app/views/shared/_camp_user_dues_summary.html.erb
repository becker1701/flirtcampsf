
<% if user.next_event_intention %>
  <div style='margin: 20px 0;'>
    <% if user.next_event_intention.going? %>

      <div class="panel panel-default" id="user-camp-dues">
        <div class="panel-heading">
          <h3 class="panel-title"><strong>Camp Dues for <%= display_name(user) %></strong></h3>
        </div>
        <div class="panel-body">
        <div class="row">
          <div class="col-md-5">
            <ul class="unstyled_list">
              <li>Total Camp Dues: <%= number_to_currency(user.sum_camp_dues, precision: 0) %></li>
              <li>Total Payments: <%= number_to_currency(user.sum_next_event_payments, precision: 0) %></li>
              <li><strong>Balance: <%= number_to_currency(user.next_event_camp_dues_balance, precision: 0) %></strong></li>

            </ul>

            <%= link_to "Add Payment", new_user_payment_path(user), class: "btn btn-success btn-block btn-sm" if current_user.admin? %>

          </div>
          <div class="col-md-7">
            <%= render 'shared/payment_options' %>
          </div>
        </div>
        </div>

        <div class="panel-footer">
          <%= link_to "View a breakdown of your camp dues", user_payments_path(user) %>

        </div>
      </div>

    <% end %>
  </div>
<% end %>



