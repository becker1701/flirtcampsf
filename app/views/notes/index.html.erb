<%= render 'notes_title' %>

<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Chapter</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><strong><%= note.chapter %></strong></td>
        <td><%= h(format_newline(note.note)).html_safe %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
