<%= form_for([@user, @payment]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%#= f.hidden_field :event_id, class: "form-control" %>
    <%= f.hidden_field :user_id, class: "form-control" %>
    <%= f.hidden_field :event_id, class: "form-control" %>


  <div class="form-group">
    <%= f.label :payment_date %><br>
    <%#= f.date_field :day, class: "form-control" %>
    <%= f.date_select :payment_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :amount %><br>
    <%= f.number_field :amount, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>