<% provide(:title, "Camp Dues for #{@user.name}") %>

<h1>Camp Dues for <%= @user.name %></h1>
<h1><small><%= @event.year %></small></h1>



<div class="row">
	<div class="col-md-8 col-md-offset-2">

		<%= link_to "View Member Profile", current_user?(@user) ? root_path : user_path(@user) %> 
		<%= link_to "Camp Dues Overview", camp_dues_overview_event_path(@event), class: "btn btn-xs btn-info" if current_user.admin? %>
		
		<%= render 'shared/camp_user_dues', user: @user %>
		
	</div>
</div>